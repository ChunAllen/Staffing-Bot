<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :fname %>
  <%= f.text_field :fname %></div>

  <div><%= f.label :mname %>
  <%= f.text_field :mname %></div>

  <div><%= f.label :lname %>
  <%= f.text_field :lname %></div>

    <div><%= f.label :country %>
  <%= f.text_field :country %></div>

    <div><%= f.label :city %>
  <%= f.text_field :city %></div>

    <div><%= f.label :address %>
  <%= f.text_field :address %></div>

  <div><%= f.label :potal_code %>
  <%= f.text_field :postal_code %></div>

    <div><%= f.label :bdate %>
  <%= f.text_field :bdate %></div>


    <div><%= f.label :industry %>
  <%= f.text_field :industry %></div>


  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
