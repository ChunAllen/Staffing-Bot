<!DOCTYPE html>
<html>
<head>
  <title>Sb</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<%if user_signed_in? %>
			<div class="navbar navbar-fixed-top">
		    	<div class="navbar-inner">
		    	  <div class="container">
		        	<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		          <span class="icon-bar"></span>
		          <span class="icon-bar"></span>
		          <span class="icon-bar"></span>
		        </a>
		            <%= link_to "StaffingBot",root_path,  :class=>"brand"%>
		        <div class="nav-collapse">
		          <ul class="nav">
		            <li><%= link_to "Home", root_path %></li>
		            <li><%= link_to "Profile", profile_user_path(current_user.id) %></li>
		            <li><%= link_to "Blog Network" %></li>
		          
		          </ul>
		        </div>

		        <div class="btn-group pull-right">
		        	<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
			              <i class="icon-user"></i> <%= current_user.fname + "  "+ current_user.lname %>
			              <span class="caret"></span>
			        </a>
			        <ul class="dropdown-menu">
		              <li><%= link_to "Profile" %></li>
		              <li class="divider"></li>
		               <li><%= link_to "Settings"%></li>
		              <li class="divider"></li>
		              <li><%= link_to "Log Out",destroy_user_session_path, :method => :delete  %></li>
		            </ul>

		        </div>
		      </div>
		    </div>
		  </div>	

		

		<div class="container">
				    <% flash.each do |name, msg| %>
						  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
						  <a class="close" data-dismiss="alert">×</a>
						 <%= msg %>
					</div>
					<% end %>
					 <div class="row">
				    <div class="span9"> <%= yield %></div>
				    </div>
	  </div>

<%else%>

	<div class="navbar navbar-fixed-top">
		    	<div class="navbar-inner">
		    	  <div class="container">
		        	<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		          <span class="icon-bar"></span>
		          <span class="icon-bar"></span>
		          <span class="icon-bar"></span>
		        </a>
		       <%= link_to "StaffingBot",root_path,  :class=>"brand"%>
		        <div class="nav-collapse">
		          <ul class="nav">
		            <li><%= link_to "Sign Up", new_registration_path(resource_name)%></li>
		            <li><%= link_to "Sign In", new_session_path(resource_name) %></li>
		           
		          </ul>
		        </div>
		      </div>
		    </div>
		  </div>	

	<div class="container">
		<% flash.each do |name, msg| %>
			  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
			    <a class="close" data-dismiss="alert">×</a>
			    <%= msg %>
			  </div>
		<% end %>
		
    <div class="row">
      <div class="span9"><%= yield %></div>
    </div>	
  	</div>

<%end%>


</body>
</html>
